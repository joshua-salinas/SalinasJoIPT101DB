<Window x:Class="SalinasWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalinasWpfApp"
        mc:Ignorable="d"
        Title="Coffee Shop POS" Height="500" Width="800" Background="Beige">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Coffee Shop" FontSize="28" FontWeight="Bold" Foreground="#6B4F4F"
                   Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,10"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock Text="Menu" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ListBox Name="MenuList">
                <ListBoxItem Content="Matcha - ₱50"/>
                <ListBoxItem Content="Cappuccino - ₱40"/>
                <ListBoxItem Content="Latte - ₱40"/>
                <ListBoxItem Content="Mocha - ₱50"/>
                <ListBoxItem Content="Iced Coffee - 40"/>
            </ListBox>
            <Button Content="Add to Order" Background="#D4A373" Foreground="White" FontWeight="Bold"
                    Margin="0,10,0,0" Height="35"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Order Summary" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ListBox Name="OrderList"/>
            <TextBlock Name="TotalText" Text="Total: ₱0" FontSize="16" FontWeight="Bold" Margin="0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Checkout" Width="120" Height="35" Margin="10" Background="#6B4F4F" Foreground="White"/>
            <Button Content="Clear Order" Width="120" Height="35" Margin="10" Background="#A0522D" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>